
<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<h2><%= @album.title %></h2>

<p>
  <strong>Text:</strong>
  <%= @album.body %>
</p>

<%= render @album.comments %>

<h4>Add a comment</h4>
<%= render 'comments/form' %>

<%= link_to 'Back', albums_path %>
<% if current_user.id == @album.user.id %>
  <%= link_to 'Edit', edit_album_path %>
<% end %>
